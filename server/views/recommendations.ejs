<!-- Removes scalability, for consitency accross devices -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">

<!-- To view this site locally, run "npx browser-sync start --server --files "./*.html" --no-open --no-notify --directory" from this folder -->
<!-- Then in your web browser, access the site via http://localhost:3000/ or mobile from http://192.168.1.147:3000/-->

<html>

<head>
  <!--basic starting setup-->
  <meta charset="utf-8">
  <link rel="icon" href="/icons/wm_logo.png" type="image/png">
  <title>Windan Market</title>
  <link rel="stylesheet" href="/core.css">
  <link rel="stylesheet" href="/fonts/ostrich-sans-master/webfonts/ostrich-sans.css">
  <script src="scripts/scroll_position.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="scripts/recommendation_form.js" defer></script>
</head>

<body>
  <!--HEADER-->
  <nav class="header-container">
    <div class="header-column-left">
      <a href="/">
        <img src="/icons/back-button.png" alt="Back Button" id="back-button">
      </a>
    </div>
    <div class="header-column-center">
      <h1 class="header-title">
        <a href="/">Windan Market</a>
        <img src="/icons/beta-button.png" alt="Beta Button" id="beta-button">
      </h1>
    </div>
    <div class="header-column-right">
      <a href="/wishlist">
        <img src="/icons/wishlist-button.png" alt="Wishlist Saves" id="wishlist-saves-button">
      </a>
    </div>
  </nav>

  <!--PRODUCTS-->
  <div class="middle-section" id="middle-section">
    <div id="loading-container">
      <img src="/icons/loading.gif" alt="Loading..." id="loading-img">
    </div>
    <div id="rec-form">
      <h1 id="page-title">Recommendations</h1>
      <form id="response-form" onsubmit="responseFormSubmit(event)">
        <div id="rec-form-top-half">
          <div id="rec-form-top-left">
            <div id="name-rec">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            <div id="email-rec">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required>
            </div>
          </div>
          <div id="rec-form-top-right">
            <div id="submit-rec">
              <button type="submit" id="submit">
                <img src="/icons/double-right-light.png" alt="Submit Form">
              </button>
            </div>
          </div>
        </div>
        <div id="rec-form-bottom-half">
          <div>
            <label for="recommendation">Let us know what you think</label>
            <textarea type="text" id="recommendation" name="recommendation" required></textarea>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>


<footer class="footer">
  <%- include('./partials/footer.ejs') %>
</footer>

</html>